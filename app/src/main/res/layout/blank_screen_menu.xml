<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Student First Name: "
                android:layout_weight="1"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Student Last Name: "
                android:layout_weight="1"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Student CWID: "
                android:layout_weight="1"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">
            <EditText
                android:id="@+id/add_fname_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/add_lname_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/add_cwid_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/add_course_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Course"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/add_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Course Name"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/add_course_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Course Grade"
                android:layout_weight="1"/>
        </LinearLayout>

        <ListView
            android:id="@+id/courses_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D4D5D1">
        </ListView>
    </LinearLayout>
</LinearLayout>